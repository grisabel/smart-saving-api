{
  "name": "@smart-savings-api/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npx nx serve smart-savings-api",
    "swagger": "node docs/swagger/swagger.js",
    "start:swagger": "npx concurrently --kill-other -n \"SERVER,SWAGGER\" -c \"bgBlue,bgGreen\" \"npm run start\" \"npm run swagger\"",
    "start:prod": "npx nx run smart-savings-api:serve:production",
    "db:init": "npm run build && npx prisma migrate deploy && node --require=./module-alias-bootstrap.js --require=dotenv/config dist/smart-savings-api/src/initialData.js",
    "build": "npx nx build smart-savings-api",
    "test": "npx nx test smart-savings-api",
    "test:e2e": "npx nx e2e smart-savings-api-e2e",
    "lint": "nx run-many --target=lint --projects=smart-savings-api,smart-savings-api-e2e"
  },
  "private": true,
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "~4.18.1",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.4.4",
    "node-cron": "^3.0.3",
    "resend": "^2.1.0",
    "tslib": "^2.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nx/eslint": "17.1.3",
    "@nx/eslint-plugin": "17.1.3",
    "@nx/jest": "17.1.3",
    "@nx/js": "17.1.3",
    "@nx/node": "17.1.3",
    "@nx/workspace": "17.1.3",
    "@swc-node/register": "~1.6.7",
    "@swc/core": "~1.3.85",
    "@types/express": "~4.17.13",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "~18.7.1",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "concurrently": "^8.2.2",
    "eslint": "~8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "express-validator": "^7.0.1",
    "jest": "^29.4.1",
    "jest-environment-node": "^29.4.1",
    "module-alias": "^2.2.3",
    "nx": "17.1.3",
    "prettier": "^2.6.2",
    "prisma": "^5.7.1",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.2.2"
  }
}
